@model CarpAssociationWebsite.Models.Member

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <!-- Tittle screen -->
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/Images/dad.svg" alt="" width="100" height="100">
        <h2>Delete member</h2>
        <p class="lead">
            Are you sure you want to delete this member?
        </p>
    </div>

    <hr />

    @Html.HiddenFor(model => model.Id)

    <!-- Name and First Name -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <!-- First Name -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.FirstName) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <!-- Last Name -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.LastName) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>
        </div>
    </div>


    <!-- Phone Number and PID -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <!-- PhoneNumber -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.PersonalIdentificationNumber) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.PersonalIdentificationNumber)
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <!-- Net Income -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.NetIncome) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.NetIncome)
                </div>
            </div>
        </div>
    </div>


    <!-- City and State -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <!-- City -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.City) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.City)
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <!-- State -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.State) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.State)
                </div>
            </div>
        </div>
    </div>



    <!-- Address -->
    <div class="row">
        <div class="col mb-3">
            <!-- Address -->
            <div class="form-group row">
                <b>@Html.DisplayNameFor(model => model.Address) :</b>
                <div class="col">
                    @Html.DisplayFor(model => model.Address)
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="@Url.Action("StatisticsAndInformationDashboardIndex", "StatisticsAndInformationDashboard")">Back to list</a>
        </div>
    }

</div>

