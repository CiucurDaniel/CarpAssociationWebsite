@model CarpAssociationWebsite.Models.EconomyAccount

@{
    ViewBag.Title = "Create";
}



<div class="container">
    <!-- Tittle screen -->
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/Images/economy_account_icon.png" alt="" width="100" height="100">
        <h2>Start a new economy account</h2>
        <p class="lead">
            Enter all details regarding the economy account. The interest rate is: @ViewBag.InterestRateLatest
        </p>
    </div>
    


    <!-- Effective form area -->
    <div class="row justify-content-center">
        <div class="col-md-10">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form">
                <h4 class="mb-3">Economy Account Information</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                
                <!-- Person and Deposit Amount-->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <!-- Person -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.EconomyAccountId, "Member", htmlAttributes: new {@class = "control-label col-md-4"})
                            <div class="col">
                                @Html.DropDownList("EconomyAccountId", null, htmlAttributes: new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.EconomyAccountId, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <!-- Deposit amount -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.DepositAmount, htmlAttributes: new {@class = "control-label col-md-4"})
                            <div class="col">
                                @Html.EditorFor(model => model.DepositAmount, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.DepositAmount, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <!-- DateStarted -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.DateStarted, htmlAttributes: new {@class = "control-label col-md-4"})
                            <div class="col">
                                @Html.EditorFor(model => model.DateStarted, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor(model => model.DateStarted, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <!-- Duration -->
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Duration, htmlAttributes: new {@class = "control-label col-md-4"})
                            <div class="col">
                                @Html.EnumDropDownListFor(model => model.Duration, htmlAttributes: new {@class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Duration, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <hr />
                <br />

                <div class="form-group row justify-content-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg btn-block" />
                </div>


            </div>
            }

        </div>
    </div>


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>