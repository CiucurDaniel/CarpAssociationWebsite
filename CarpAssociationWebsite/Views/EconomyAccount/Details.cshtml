@model CarpAssociationWebsite.Models.EconomyAccount

@{
    ViewBag.Title = "Details";
}

<div class="container">

    <!-- Tittle screen -->
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/Images/economy_account_icon.png" alt="" width="100" height="100">
        <h2>Economy account - Details</h2>
        <p class="lead">
            Bellow are the details regarding the economy account
        </p>
    </div>

    <div>
        <hr />

        <!-- Name and First Name -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- First Name -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Member.FirstName) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Member.FirstName)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Last Name -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Member.LastName) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Member.LastName)
                    </div>
                </div>
            </div>
        </div>


        <!-- Deposit Amount and duration -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Deposit Amount -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.DepositAmount) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.DepositAmount)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Duration -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Duration) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Duration)
                    </div>
                </div>
            </div>
        </div>


        <!-- Interest rate and taxed amount -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Interest rate -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.InterestRate) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.InterestRate)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Taxed amount -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.TaxedAmount) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.TaxedAmount)
                    </div>
                </div>
            </div>
        </div>


        <!-- Date started and profit from interest -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Date started -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.DateStarted) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.DateStarted)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Profit from interest -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.ProfitFromInterest) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.ProfitFromInterest)
                    </div>
                </div>
            </div>
        </div>


        <br />
        <br />

    </div>

    <p>
        <a class="btn btn-outline-primary" href="@Url.Action("ActiveLoansAndEconomyAccountsIndex", "ActiveLoansAndEconomyAccounts")">Back to list</a>
    </p>

</div>

