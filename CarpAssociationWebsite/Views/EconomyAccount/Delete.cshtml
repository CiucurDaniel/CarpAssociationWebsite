@model CarpAssociationWebsite.Models.EconomyAccount

@{
    ViewBag.Title = "Delete";
}


<div class="container">

    <!-- Tittle screen -->
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/Images/economy_account_icon.png" alt="" width="100" height="100">
        <h2>Close economy account</h2>
        <p class="lead">
            Are you sure you want to close this economy account?
        </p>
    </div>


    <!-- Print statement area -->
    <div class="row">
        <div class="col-md-12 mb-3">
            <div class="form-group row">
                <p class="lead">
                    Before closing the account please print the statement for the member. This step is mandatory!
                </p>
                <div class="col">
                    <!-- Button which the user uses to print the PDF statement -->
                    <div>@Html.ActionLink("Print PDF", "WithdrawAsPDF", new { idOfEconomyAccount = Model.EconomyAccountId }, new { @class = "btn btn-success" })</div>
                </div>
            </div>
        </div>
    </div>

    <div>

        <!-- Name and First Name -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- First Name -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Member.FirstName) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Member.FirstName)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Last Name -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Member.LastName) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Member.LastName)
                    </div>
                </div>
            </div>
        </div>


        <!-- Deposit Amount and duration -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Deposit Amount -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.DepositAmount) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.DepositAmount) RON
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Duration -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.Duration) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.Duration)
                    </div>
                </div>
            </div>
        </div>


        <!-- Interest rate and taxed amount -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Interest rate -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.InterestRate) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.InterestRate) %
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Taxed amount -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.TaxedAmount) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.TaxedAmount) RON
                    </div>
                </div>
            </div>
        </div>


        <!-- Date started and profit from interest -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <!-- Date started -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.DateStarted) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.DateStarted)
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <!-- Profit from interest -->
                <div class="form-group row">
                    <b>@Html.DisplayNameFor(model => model.ProfitFromInterest) :</b>
                    <div class="col">
                        @Html.DisplayFor(model => model.ProfitFromInterest) RON
                    </div>
                </div>
            </div>
        </div>

        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <div class="form-group row justify-content-center">
                    <input type="submit" value="Close account" class="btn btn-warning m-3" />
                    <a class="m-3" href="@Url.Action("ActiveLoansAndEconomyAccountsIndex", "ActiveLoansAndEconomyAccounts")">Back to list</a>
                </div>
            </div>
        }
    </div>

</div>
