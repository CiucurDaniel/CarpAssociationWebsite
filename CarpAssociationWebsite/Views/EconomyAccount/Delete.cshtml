@model CarpAssociationWebsite.Models.EconomyAccount

@{
    ViewBag.Title = "Delete";
}


<div class="container">

    <!-- Tittle screen -->
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Content/Images/economy_account_icon.png" alt="" width="100" height="100">
        <h2>Close economy account</h2>
        <p class="lead">
            Are you sure you want to close this economy account?
        </p>
    </div>
    
    
    <!-- Print statement area -->
    <p class="lead">
        Before closing the account please print the statement for the member. This step is mandatory!
    </p>

    <!-- Button which the user uses to print the PDF statement -->
    <div>@Html.ActionLink("Print PDF", "WithdrawAsPDF", new { idOfEconomyAccount = Model.EconomyAccountId }, new { @class = "btn btn-secondary" })</div>

    

    <div>
        <h4>EconomyAccount</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Member.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Member.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepositAmount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepositAmount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DateStarted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateStarted)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Duration)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.InterestRate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InterestRate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProfitFromInterest)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProfitFromInterest)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TaxedAmount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaxedAmount)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a  href="@Url.Action("ActiveLoansAndEconomyAccountsIndex", "ActiveLoansAndEconomyAccounts")">Back to list</a>
    </div>
        }
    </div>

</div>